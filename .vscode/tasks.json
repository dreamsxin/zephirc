{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "build_type",
            "description": "Select build type (default: Debug)",
            "type": "pickString",
            "default": "Debug",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
                "MinSizeRel"
            ]
        }
    ],

    "tasks": [
        {
            "label": "Build | CMake Build",
            "group": "build",
            "type": "shell",
            "command": "cmake",
            "osx":{
                "options": {
                    "env": {
                        "CCCOV": "OFF",
                        "WEFFCPP": "OFF"
                    }
                }
            },
            "linux":{
                "options": {
                    "env": {
                        "CCCOV": "ON",
                        "WEFFCPP": "ON"
                    }
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "-S",
                "${workspaceFolder}",
                "-Bbuild/${input:build_type}",
                "-DCMAKE_BUILD_TYPE=${input:build_type}",
                "-DZEPHIR_BUILD_TESTING=ON",
                "-DENABLE_ALL_WARNINGS=ON",
                "-DCODE_COVERAGE=$CCOV",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCPPCHECK=ON",
                "-DENABLE_EFFECTIVE_CXX=$WEFFCPP"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": {
                "owner": "cmake",
                "fileLocation": "relative",
                "pattern":[
                    {
                        "regexp": "^CMake Error at (.*):(\\d+)\\s+.*$",
                        "file": 1,
                        "location": 2
                    },
                    {
                        "regexp": "^\\s+(.*)$",
                        "message": 1
                    }
                ]
            }
        },

        {
            "label": "Build | Build project",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "--build",
                "build/${input:build_type}",
                "-j",
                "\"$(getconf _NPROCESSORS_ONLN)\""
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*):\\s+(.*)\\s+\\[--suppress=(.*)\\]$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ]
            }
        },

        {
            "label": "Tests | Run all tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type":"shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/${input:build_type}",
                "--target",
                "check"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "Coverage | Clean coverage data",
                "Build | Build project"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": {
                "owner": "ctest",
                "fileLocation": "absolute",
                "pattern":[
                    {
                        "regexp": "^(.*):(\\d+):\\s+Failure$",
                        "file": 1,
                        "location": 2
                    },
                    {
                        "regexp": "^(.*)$",
                        "message": 1
                    }
                ]
            }
        },

        {
            "label": "Format | Format C++ code",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/${input:build_type}"
            },
            "linux": {
                "command": "make"
            },
            "osx": {
                "command": "make"
            },
            "windows": {
                "command": "nmake"
            },
            "args": [
                "cpp-format"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Format | Format cmake lists",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/${input:build_type}"
            },
            "linux": {
                "command": "make"
            },
            "osx": {
                "command": "make"
            },
            "windows": {
                "command": "nmake"
            },
            "args": [
                "cmake-format"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": true
            },
            "problemMatcher": []
        },

        {
            "label": "Coverage | Clean coverage data",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/${input:build_type}"
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "ccov"
                ]
            },
            "osx": {
                "command": "rm",
                "args": [
                    "-rf",
                    "ccov"
                ]
            },
            "windows": {
                "command": "rd",
                "args": [
                    "-r",
                    "ccov"
                ]
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Coverage | Generate HTML code coverage report",
            "type": "shell",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "ZEPHIR_TESTS_ROOT": "${workspaceFolder}/tests"
                }
            },
            "linux": {
                "options":{
                    "env": {
                        "CCOV_TARGET": "ccov-all-capture"
                    }
                }
            },
            "osx": {
                "options":{
                    "env": {
                        "CCOV_TARGET": "ccov-all"
                    }
                }
            },
            "args": [
                "--build",
                "build/${input:build_type}",
                "--target",
                "$CCOV_TARGET"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Coverage | Open HTML code coverage report",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/${input:build_type}",
                "env": {
                    "ZEPHIR_TESTS_ROOT": "${workspaceFolder}/tests"
                }
            },
            "linux": {
                "command": "make"
            },
            "osx": {
                "command": "make"
            },
            "windows": {
                "command": "nmake"
            },
            "args": [
                "ccov-open"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Coverage | Print coverage summary",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/${input:build_type}"
            },
            "linux": {
                "command": "make"
            },
            "osx": {
                "command": "make"
            },
            "windows": {
                "command": "nmake"
            },
            "args": [
                "ccov-all-report"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Coverage | Export coverage information (JSON)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build/${input:build_type}"
            },
            "linux": {
                "command": "make"
            },
            "osx": {
                "command": "make"
            },
            "windows": {
                "command": "nmake"
            },
            "args": [
                "ccov-all-export"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Install | Setup dependencies with Conan",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "command": "conan",
            "args": [
                "install",
                "${workspaceFolder}",
                "-if=${workspaceFolder}/build/${input:build_type}",
                "-pr=zephir",
                "--build=missing"
            ]
        }
    ]
}
