{
    "version": 4,
    "env": {
        "defaultIncludePath": [
            "${workspaceFolder}/src",
            "${workspaceFolder}/tests",
            "${workspaceFolder}/build/test/googletest/src/googletest/include",
            "${workspaceFolder}/build/test/googletest/src/googlemock/include"
        ]
    },
    "configurations": [
        {
            "name": "Zephir for macOs",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${defaultIncludePath}"
            ],
            "browse": {
                "path": [
                    "${defaultIncludePath}"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "compilerPath": "/usr/bin/clang",
            "cppStandard": "c++11"
        },
        {
            "name": "Zephir for Linux",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${defaultIncludePath}"
            ],
            "browse": {
                "path": [
                    "${defaultIncludePath}"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "compilerPath": "/usr/bin/gcc",
            "cppStandard": "c++11"
        }
    ]
}
