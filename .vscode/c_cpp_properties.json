{
    "env": {
        "projectDefaultIncludePath": [
            "${workspaceFolder}/external/**",
            "${workspaceFolder}/include",
            "${workspaceFolder}/src/**"
        ],
        "projectCompileCommand": "${workspaceFolder}/build/compile_commands.json",
        "projectBrowseDatabase": "${workspaceFolder}/.vscode/browse.vc.db"
    },
    "configurations": [
        {
            "name": "Zephir for macOs",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${projectDefaultIncludePath}"
            ],
            "browse": {
                "path": [
                    "${projectDefaultIncludePath}"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${projectBrowseDatabase}"
            },
            "compilerPath": "/usr/bin/clang",
            "cppStandard": "c++17",
            "cStandard": "c11",
            "compileCommands": "${projectCompileCommand}"
        },
        {
            "name": "Zephir for Linux",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${projectDefaultIncludePath}"
            ],
            "browse": {
                "path": [
                    "${projectDefaultIncludePath}"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${projectBrowseDatabase}"
            },
            "compilerPath": "/usr/bin/gcc",
            "cppStandard": "c++17",
            "cStandard": "c11",
            "compileCommands": "${projectCompileCommand}"
        }
    ],
    "version": 4
}
