{
    "version": 4,
    "configurations": [
        {
            "name": "Zephir for macOs",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "compilerPath": "/usr/bin/clang",
            "cppStandard": "c++17",
            "cStandard": "c11",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        },
        {
            "name": "Zephir for Linux",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": false,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "compilerPath": "/usr/bin/gcc",
            "cppStandard": "c++17",
            "cStandard": "c11",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ]
}
